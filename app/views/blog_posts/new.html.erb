<h1>New blog post</h1>

<%= form_for(@blog_post) do |f| %>

  <div class='field'>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class='field'>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>

<% end %>